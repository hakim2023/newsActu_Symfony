{% extends 'base.html.twig' %}

{% block body%}

  <div class="row">
      <div class="col-12 mx-auto">
      {% if article is defined %}
         <h1>Modifier un article</h1>
      </div>
      {% else %}
      <h1>Ajouter un article</h1>
      {% endif %}
  </div>

  <div class="row">
      <div class="col-8 mx-auto">
      
    {{form_start(form,{'attr':{novalidate:'novalidate'}}) }}
        
         <div class="mb-3">
                {{ form_row(form.title) }}
         </div>

          <div class="mb-3">
                {{ form_row(form.subtitle)}}
         </div>

          <div class="mb-3">
                {{ form_row(form.content)}}
         </div>

          <div class="mb-3">
                {{ form_row(form.category)}}
         </div>

          <div class="mb-3">
                {{ form_row(form.photo)}}
         </div>


      {% if article is defined %}
         <button type="submit" class="d-block col-2 mx-auto btn btn-warning">Modifier</button>
      </div>
      {% else %}
      <button type="submit" class="d-block col-2 mx-auto btn btn-warning">Publier</button>
      {% endif %}
         

         {{form_end(form)}}
    
      </div>
  </div>

 {% if article is defined and article.photo is not null %}   

     <div class="col-6">
       <img src="{{ asset('uploads/') ~ article.photo }}" alt="" class="img-fluid">
     </div>

  {% endif %}

{% endblock %}
